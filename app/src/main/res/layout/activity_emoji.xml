<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/two"
    tools:context=".Emoji">

    <EditText
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@+id/playerOne"
        app:layout_constraintLeft_toLeftOf="@+id/playerOne"
        android:layout_marginLeft="40dp"
        />
    <EditText
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:fontFamily="@font/bebas_neue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo"
        app:layout_constraintRight_toRightOf="@+id/playerTwo"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@+id/playerOneScore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/resetGame"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#1E535353"
        android:text="Reset Game"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:fontFamily="@font/bebas_neue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:text="1BI19CS144 AND 1BI19CS177"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#1E535353"
        android:layout_marginTop="148dp"
        android:drawableTop="@drawable/transparent"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#1E535353"
        android:drawableTop="@drawable/transparent"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        tools:ignore="MissingConstraints"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_2"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        android:drawableTop="@drawable/transparent"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1E535353"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        android:drawableTop="@drawable/transparent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="    SHREYA AND VANSHIKA"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetGame"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>